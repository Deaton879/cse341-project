      <form action="/prove02/display" method="POST">
          <label for="title">Title of Book: </label><br>
          <input type="text" name="title" required><br><br>
          <label for="summary">Write a  Summary:</label><br>
          <textarea cols="50" rows="10" name="summary" placeholder="Write your summary here.." required></textarea><br>
          <button type="submit">Submit Summary</button>
      </form>
    </div>
  </main>


  </body>
